<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" style="-fx-background-color: #8C1D40;" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StudentHomeController">

    <ImageView GridPane.columnIndex="1" GridPane.rowIndex="0" fitWidth="50" fitHeight="50">
        <image>
            <Image url="" preserveRatio="true"/> 
        </image>
    </ImageView>

    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>


    <rowConstraints>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
       
    </rowConstraints>

 
    <Button onAction="#handleViewSemesterPlanAction" stylesheets="@../styles.css" text="View Semester Plan" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    

    <Label stylesheets="@../styles.css" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
    <Label stylesheets="@../styles.css" text="College Major:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="majorField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    
    <Label stylesheets="@../styles.css" text="Minor:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="minorField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    
    <Label stylesheets="@../styles.css" text="GPA:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="gpaField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    
    <Label stylesheets="@../styles.css" text="Advisor:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="advisorField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    
    <Label stylesheets="@../styles.css" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="emailField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    
    <Label stylesheets="@../styles.css" text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="idField" stylesheets="@../styles.css" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    
    <Label text="Degree Progression:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="degreeProgressionField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

</GridPane>
