<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.net.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controllers.StudentHomepageController"
          alignment="center"
          hgap="10"
          vgap="10">
        

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>


    <rowConstraints>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
       
    </rowConstraints>

 
    <Button text="View Semester Plan" onAction="#handleViewSemesterPlanAction" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Label text="College Major:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="majorField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    
    <Label text="Minor:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="minorField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    
    <Label text="GPA:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="gpaField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    
    <Label text="Advisor:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="advisorField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    
    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    
    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    
    <Label text="Degree Progression:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="degreeProgressionField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <stylesheets>
        <URL value="@  styles.css"/>   

    </stylesheets>
</GridPane>
